<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo del ProgressBar -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Color del fondo -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Progreso secundario (opcional, mÃ¡s claro) -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#BBDEFB" /> <!-- Color del progreso secundario -->
                <corners android:radius="8dp" />
            </shape>
        </clip>
    </item>

    <!-- Progreso principal -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <gradient
                    android:startColor="#42A5F5"
                    android:centerColor="#5C6BC0"
                    android:endColor="#7E57C2"
                    android:angle="0" />
                <corners android:radius="8dp" />
            </shape>
        </clip>
    </item>
</layer-list>