<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#E4E4E4">

        <ImageView
            android:id="@+id/imagenEvento"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/evento"
            android:contentDescription="Imagen del evento" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/tituloEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TÃ­tulo del Evento"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tipoEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de Evento"
                android:textSize="14sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/fechaEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha: 2023-12-31"
                android:textSize="14sp"
                android:textColor="#000000" />
        </LinearLayout>

        <Button
            android:id="@+id/botonApuntarse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apuntarse"
            android:backgroundTint="#3F51B5"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
</androidx.cardview.widget.CardView>