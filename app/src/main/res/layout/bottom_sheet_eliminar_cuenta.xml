<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_bottomsheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="Â¿Seguro que deseas eliminar tu cuenta?"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/editTextMotivo"
        android:hint="Escriba el motivo..."
        android:background="@drawable/rounded_editext"
        android:padding="12dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textColorHint="#5D5D5D"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnConfirmarEliminar"
        android:text="Eliminar cuenta"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_red_dark"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnCancelarEliminar"
        android:text="Cancelar"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>